<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p>Located on : <%= @restaurant.address %></p>
  <p>Phone number: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %></p>

  <%= link_to "All restaurants", restaurants_path %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>

  <h1>You can also see reviews from other clients</h1>
  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> - <%= review.rating %></li>
    <% end %>
  </ul>
</div>
