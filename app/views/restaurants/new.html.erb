<div class="container">
  <h1>Do you want to create a new restaurant ? </h1>
   <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORY %>
        <%= f.button :submit %>
      <% end %>

  <%= link_to "All restaurants", restaurants_path %>
</div>
