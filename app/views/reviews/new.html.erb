<div class="container">
  <h1>Do you want to create a review for this restaurant ? </h1>
   <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>

  <%= link_to "All restaurants", restaurants_path %>
  <%= link_to "Go back to restaurant", restaurant_path(@restaurant) %>

</div>
